        /// <summary>
        /// 保存数据
        /// 更新数据的时候，如果是修改了FAMILY_NAME和原先的不同，调用LoadData方法同时查FAMILY_NAME，如果有相同的不给保存
        /// 如果没有修改FAMILY_NAME就直接保存
        /// </summary>
        /// <param name="model"></param>
        /// <returns></returns>
        [HttpPost]
        [Authorize("Permission")]
        public async Task<ApiBaseReturn<bool>> SaveData([FromBody] SfcsProductFamilyModel model)
        {
            ApiBaseReturn<bool> returnVM = new ApiBaseReturn<bool>();
            if (!ErrorInfo.Status)
            {
                try
                {
                    #region 检查参数
                    //新增加
                    if (!ErrorInfo.Status && model.insertRecords != null)
                    {
                        foreach (var item in model.insertRecords)
                        {
                            if (!ErrorInfo.Status && !item.FAMILY_NAME.IsNullOrWhiteSpace())
                            {
                                bool isResult = await _repository.ItemIsExist("SFCS_PRODUCT_FAMILY", "FAMILY_NAME", item.FAMILY_NAME);
                                if (isResult)
                                {
                                    string err = string.Format(_localizer["is_exist_name_error"], item.FAMILY_NAME);
                                    ErrorInfo.Set(err, MethodBase.GetCurrentMethod(), EnumErrorType.Warning);
                                }
                            }
                        }
                    }

                    #endregion

                    #region 保存并返回

                    if (!ErrorInfo.Status)
                    {
                        decimal resdata = await _repository.SaveDataByTrans(model);
                        if (resdata != -1)
                        {
                            returnVM.Result = true;
                        }
                        else
                        {
                            returnVM.Result = false;
                        }
                    }

                    #endregion
                }
                catch (Exception ex)
                {
                    ErrorInfo.Set(ex.Message, MethodBase.GetCurrentMethod(), EnumErrorType.Error);
                }
            }

            #region 如果出现错误，则写错误日志并返回错误内容

            WriteLog(ref returnVM);

            #endregion

            return returnVM;
        }
